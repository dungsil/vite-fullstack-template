{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./src/client/*"],
      "@/*": ["./src/server/*"]
    },
    "types": [
      "vite/client"
    ]
  },
  "exclude": ["node_modules"]
}
